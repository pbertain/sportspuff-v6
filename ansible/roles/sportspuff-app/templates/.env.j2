# Flask Configuration
SECRET_KEY={{ secret_key | default('dev-secret-key-change-in-production') }}
FLASK_ENV={{ flask_env | default('production') }}
FLASK_DEBUG={{ flask_debug | default('False') }}

# Database Configuration
DB_HOST={{ db_host | default('localhost') }}
DB_NAME={{ db_name | default('sportspuff_v6') }}
DB_USER={{ db_user | default('postgres') }}
DB_PASSWORD={{ db_password | default('password') }}

# API Configuration
SPORTSPUFF_API_BASE_URL={{ sportspuff_api_base_url | default('https://api.sportspuff.org') }}

# RapidAPI Configuration (for NFL team data updates)
RAPIDAPI_KEY={{ rapidapi_key | default('') }}
